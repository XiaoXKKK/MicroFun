    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug split_tool",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/debug/split_tool",
            "args": [
                "-i", "${workspaceFolder}/data/sample1.png",
                "-o", "${workspaceFolder}/data/tiles",
                "--tile", "256x256",
                "--meta", "${workspaceFolder}/data/tiles/meta.txt"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "lldb",
            "preLaunchTask": "build split_tool (debug)"
        },
        {
            "name": "Debug check_tool",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/debug/check_tool",
            "args": [
                "-i", "${workspaceFolder}/data/tiles/meta.txt",
                "-p", "0,0",
                "-s", "512x512",
                "-o", "${workspaceFolder}/data/viewport.png"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "lldb",
            "preLaunchTask": "build check_tool (debug)"
        }
    ]
}